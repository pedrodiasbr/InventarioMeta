@using InventarioMeta.Models
@model InventarioMeta.Models.Maquinas

@{
    ViewBag.Title = "Cadastrar";
}
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <a href="@Url.Action("Index","Maquinas")">
            <button type="button" value="Retornar" class="btn btn-danger waves-effect waves-themed">
                Retornar
            </button>
        </a>
    </div>
</div>
<h2>Cadastrar Máquinas</h2>


@using (Html.BeginForm("Salvar","Maquinas",FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Processador, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Processador, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Processador, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Memória RAM
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RAM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RAM, "", new { @class = "text-danger" })
        </div>

    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Sistema Operacional
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SistemaOperacional, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SistemaOperacional, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Tipo de Armazenamento
        </label>
        <div class="col-md-10">
            @Html.DropDownList("CodigoTipoArmazenamento", Model.TiposArmazenamentos, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.CodigoTipoArmazenamento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Armazenamento (GB)
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.EspacoArmazenamento, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.EspacoArmazenamento, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Adaptador Wifi
        </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.AdaptadorWifi, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AdaptadorWifi, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">
            Responsável
        </label>

        <div class="col-md-10">
            @Html.EditorFor(model => model.Responsavel, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Responsavel, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-actions no-color">
        <button type="submit" value="Cadastrar" class="btn btn-success waves-effect waves-themed">
            Cadastrar
        </button> |

        <a href="@Url.Action("Index","Maquinas")">
            <button type="button" value="Retornar" class="btn btn-danger waves-effect waves-themed">
                Retornar
            </button>
        </a>
    </div>


    @*@Html.DropDownListFor(x => x.TipoArmazenamento, InventarioMeta.Models.Constantes.ArmazenamentoEnum, new { htmlAttributes = new { @class = "form-control" } })*@
</div>



        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
 }
